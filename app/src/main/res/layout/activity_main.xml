<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/playPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="SuperpoweredExample_PlayPause"
        android:text="PLAY" />

    <SeekBar
        android:id="@+id/crossFader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/playPause"
        android:layout_marginTop="35dp" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/crossFader"
        android:orientation="horizontal" >



        <Button
            android:id="@+id/openA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playPauseA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:onClick="Player1_OpenA"
            android:text="open A" />


        <Button
            android:id="@+id/openB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playPauseB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:onClick="Player1_OpenB"
            android:text="open B" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:orientation="horizontal" >



        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="FLANGER" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="FILTERL" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="FILTERH" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ROLL" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ECHO" />


        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="GATE" />



        <RadioButton
            android:id="@+id/radio6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="REVERB" />

        <RadioButton
            android:id="@+id/radio7"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="WHOOSH" />


    </RadioGroup>

    <SeekBar
        android:id="@+id/fxFader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="35dp" />

</RelativeLayout>
